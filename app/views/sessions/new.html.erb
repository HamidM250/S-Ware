<center>
<h1>SPCA Volunteer Portal</h1>
<font color="red">Invalid email or password</font>
<%= form_tag @session do %>
  <table border="0">
  <tr>
    <td><%= label_tag :email %></td>
    <td><%= text_field_tag :email, params[:email] %></td>
  </tr>
  <tr>
    <td><%= label_tag :password %></td>
    <td><%= password_field_tag :password %></td>
  </tr>
  <tr><td></td><td align="right"><%= submit_tag "Log in" %></td></tr>
<% end %>
</center>