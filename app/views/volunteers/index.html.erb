

<h1>Listing volunteers</h1>

 
<table border=1>

  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Be a Fosterer</th>
    <th>Test Fosterer2</th>
    <th>Next Working</th>
    <th>in job</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @volunteers.each do |volunteer| %>
  <tr>
    <% job = volunteer.next_working %>
    <td><%= volunteer.firstname %></td>
    <td><%= volunteer.lastname %></td>
    
    
    <td>
     <%if !volunteer.fosterer.nil?%>
        <%= link_to 'edit details', {:controller => '/fosterers', :id => volunteer.fosterer.id, :action => 'edit', :volunteer_id => volunteer.id} %>
     <%else%>
	<%= link_to 'Become a fosterer', {:controller => '/fosterers', :action => 'new', :volunteer_id => volunteer.id} %>
      <%end%>
  
    </td>
    
    
     <td>
     <%if !volunteer.fosterer2.nil?%>
        <%= link_to 'edit details', {:controller => '/fosterer2s', :id => volunteer.fosterer2.id, :action => 'edit', :volunteer_id => volunteer.id} %>
     <%else%>
	<%= link_to 'Become a fosterer', {:controller => '/fosterer2s', :action => 'new', :volunteer_id => volunteer.id} %>
      <%end%>
  
    </td>
    
    
    
    
    <%#if volunteer.befosterer==false%>
<!--     <td><%#= link_to 'Wish be fosterer', volunteer %></td> -->
      
    <%#end%>
   
   
   
    
    <td><%= (job.nil? or job.name == "none") ? 'no' : job.day %></td>

    <td><%= (job.nil? or job.name == "none") ? 'no' : job.name %></td>
    
    <td><%= link_to 'Show', volunteer %></td>
    <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
    <td><%= link_to 'Destroy', volunteer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    
    
    <%# if volunteer.befosterer==true %>
<!--         <td><%#= link_to 'Fosterer form', new_fosterer_path%></td> -->
    <%# end %>
    
  </tr>
<% end %>
</table>

