<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @volunteer.firstname %>
</p>

<p>
  <b>Last name:</b>
  <%= @volunteer.lastname %>
</p>

<p>
  <b>Address:</b>
  <%= @volunteer.address %>
</p>

<p>
  <b>Email:</b>
  <%= @volunteer.email %>
</p>

<p>
  <b>Mobile:</b>
  <%= @volunteer.moblie %>
</p>

<p>
  <b>Home:</b>
  <%= @volunteer.home %>
</p>

<p>
  <b>Orientation Date:</b>
<!--   Test -->
  <% if (@volunteer.orientation_id.nil?)%>
    No orientation selected
   <% else %> 
    <%= @volunteer.orientation.datetime%>
  <% end %>
</p>

<p>
  <b>Title:</b>
  <%= @volunteer.title %>
</p>

<p>
  <b>Dob:</b>
  <%= @volunteer.dob %>
</p>

<p>
  <b>Is a Fosterer:</b>
  <%= @volunteer.befosterer.nil? ? "no" : "yes" %>
</p>
<p>
  <% job = next_working @volunteer %>
  <b>Next working:</b>
    <%= (job[0].nil? or job[0] == "none") ? 'no' : job[1] +job[2] %>
  <b>in job:</b>
    <%= (job[0].nil? or job[0] == "none") ? 'no' : job[0] %>
</p>

<p>
  <b>Background:</b>
  <%= @volunteer.background %>
</p>

<p><%############## Volunteer Absences ########### %>
  <b>Noted absences, since 
              <%= Time.now - @volcoordinator.absence_period.weeks %>:</b>
  <% absent = @volunteer.absences.where( "day > ?", 
              Time.now - @volcoordinator.absence_period.weeks) %>
  <% if absent.empty? %>
    none
  <% else %>
    <br/>&nbsp&nbsp
    <% b = Array.new %>
    <% absent.each do |a| %>
      <% b << a.day.strftime("%a %d/%m/%Y") %>
    <% end %>
    <t id="warning">
      <%= b.join(', ') %>
    </t>
  <% end %>
</p>


<h2>Notes</h2>
<% @volunteer.whiteboards.each do |whiteboard| %>
<div class="note">
<h3>
    <%= whiteboard.title %>
</h3>
  <p>
    <b>Content:</b>
    <%= whiteboard.body %>
  </p>
</div>
<% end %>

<h2>Add a note:</h2>
<%= form_for([@volunteer, @volunteer.whiteboards.build]) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_volunteer_path(@volunteer) %> |
<%= link_to 'Back', volunteers_path %>
