<h1>Volunteer Scheduler for the Cat Department</h1>

<%########### variables #########%>
<% time = Time.now %>

<%########### Table Header #########%>
<table id="volschedule_table">
  <tr>
    <th class='volschedule_col'></th>
    <th class='volschedule_col'>
                            <%= I18n.t("date.month_names")[time.month] %></th>
  <% (1..31).each do |c| %>
    <% t = time + (c * (60*60*24)) %>
    <% if(t.day == 1) %>
      <th class='volschedule_col'>
                            <%= I18n.t("date.month_names")[t.month] %></th>
    <% else %>
      <th class='volschedule_col'></th>
    <% end %>
  <% end %>
  </tr>

  <tr>
    <th>Job</th>
  <% (0..31).each do |c| %>
    <% t = time + (c * (60*60*24)) %>

    <% if (t.wday > 0 && t.wday <= 5) %>
      <th class='weekday'>
      <%= t.day %>
      </th>
    <% else %>
      <th><%= t.day %></th>
    <% end %>
  <% end %>
  </tr>

<%########### Table Content #########%>
  <% jd = Jobdescription.all %>
  <% (1..jd.length-1).each do |i| %>
  <tr>
    <td><%= jd[i].name %></td>
    <% (0..31).each do |c| %>
      <% t = time + (c * (60*60*24)) %>
    <td>
      <% @volunteers.each do |v| %>
        <%##### t.wday starts at 0=>Sunday, dayint starts at 1=>Monday ###%>
        <% d = (t.wday == 0) ?
          v.dojobs.where(
              dayint: 7, jobdescription_id: jd[i].id )[0] :
          v.dojobs.where(
              dayint: t.wday, jobdescription_id: jd[i].id )[0] %>


         <%= d.nil? ? '' : v.firstname %>   
            
      <% end  %>
    </td>
    <% end %>
  </tr>

  <% end %>

</table>






